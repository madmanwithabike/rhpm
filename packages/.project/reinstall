#!/bin/bash

set -eu
set -o pipefail

PRJ_PATH="`dirname \"${BASH_SOURCE[0]}\"`"
if [[ ! -d "$PRJ_PATH" ]]; then PRJ_PATH="$PWD"; fi
PRJ_PATH="`( cd -P \"$PRJ_PATH\" && pwd )`"
source "$PRJ_PATH/configs"
source "$PRJ_PATH/paths"

if [[ -d "$DST_PATH"/"$BLD_NAME" ]]; then
  sudo mv -v "$DST_PATH"/"$BLD_NAME" /usr/local/stow/"$PKG_NAME"_"$BLD_NAME"
  cd /usr/local/stow
  sudo stow -v "$PKG_NAME"_"$BLD_NAME"

  if [[ -z "$(ls -A $DST_PATH)" ]]; then
    rm -r "$DST_PATH"
  fi
fi
