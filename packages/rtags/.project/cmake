#!/bin/bash

set -eu
set -o pipefail

DIR="`dirname \"${BASH_SOURCE[0]}\"`"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
source "$DIR/configs"
source "$DIR/paths"
unset DIR

./dependencies/$DEP_NAME

cd $SRC_PATH
git checkout $SRC_VERSION

if [[ ! -d $BLD_PATH ]]; then
  mkdir $BLD_PATH
fi

cd $BLD_PATH
cmake -DCMAKE_TOOLCHAIN_FILE=~/cmake/gnu-gcc.cmake \
      -DCMAKE_INSTALL_PREFIX=/usr/local/stow/"$PKG_NAME"_"$BLD_NAME" \
      $SRC_PATH
