#!/bin/bash

set -eu
set -o pipefail

DIR="`dirname \"${BASH_SOURCE[0]}\"`"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
source "$DIR/configs"
source "$DIR/paths"
unset DIR

# see https://github.com/sleepycat/arangodb_arch/issues/4
gpg --recv-key EA93F5E56E751E9B

cd "$BLD_PATH"
# make -d -j4
make -j4
