#!/bin/bash

set -eu
set -o pipefail

PRJ_PATH="`dirname \"${BASH_SOURCE[0]}\"`"
if [[ ! -d "$PRJ_PATH" ]]; then PRJ_PATH="$PWD"; fi
PRJ_PATH="`( cd -P \"$PRJ_PATH\" && pwd )`"
source "$PRJ_PATH/configs"
source "$PRJ_PATH/paths"

# see https://github.com/sleepycat/arangodb_arch/issues/4
gpg --recv-key EA93F5E56E751E9B

cd "$BLD_PATH"

# make -d -j4
#make -j4
make -j$(nproc)
