#!/bin/bash

sudo mkdir -v /tmp/database-dir || true
sudo chown -vR arangodb:arangodb /tmp/database-dir
sudo chmod 770 /tmp/database-dir

sudo -u arangodb -g arangodb bash << END
GLIBCXX_FORCE_NEW=1 \
arangod -c /usr/local/etc/arangodb3/arangod.conf \
        --server.endpoint tcp://127.0.0.1:8529 \
        /tmp/database-dir
END
