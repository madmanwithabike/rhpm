#!/bin/bash

set -eu
set -o pipefail

DIR="`dirname \"${BASH_SOURCE[0]}\"`"
if [[ ! -d "$DIR" ]]; then DIR="$PWD"; fi
source "$DIR/configs"
source "$DIR/paths"
unset DIR

cd "$BLD_PATH"
make install

cd /usr/local/stow
sudo stow -v "$PKG_NAME"_"$BLD_NAME"
sudo chown -R root:root "$PKG_NAME"_"$BLD_NAME"
