                 python3-clang-10 python3-lldb-10 \
                 libomp-10-dev libomp-10-doc \
                 llvm-10-runtime llvm-10 llvm-10-dev llvm-10-doc \
                 llvm-10-examples llvm-10-tools \
                 libssl-dev lua5.3 liblua5.3-0
